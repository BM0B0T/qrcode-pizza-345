---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Bebidas">
    <div>
        <img
            id="meny"
            src="/img/11-12.jpg"
            alt="Bebidas"
        />
        <img
            id="meny"
            src="/img/13-14.jpg"
            alt="Vino Blanco"
        />
        <img
            id="meny"
            src="/img/15-16.jpg"
            alt="Vino Rosado"
        />
    </div>
</Layout>

<style>
    html {
        background-color: white;
    }
    div {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    #meny {
        width: 95vw;
        padding: 0;
        margin: 0;
    }
    @media only screen and (min-width: 1000px) {
        #meny {
            width: 70vw;
        }
    }
</style>
