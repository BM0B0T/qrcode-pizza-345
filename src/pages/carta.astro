<Layout title="carta">
    <div>
        <img
            id="meny"
            src="/img/01 Carta A4 2023 Primeros.jpg"
            alt="primary menu"
        />
        <img
            id="meny"
            src="/img/02 Carta A4 2023 Ensaladas.jpg"
            alt="salad menu"
        />
        <img
            id="meny"
            src="/img/03 Carta A4 2023 Pastas.jpg"
            alt="pasta menu"
        />
        <img
            id="meny"
            src="/img/04 Carta A4 2023 Rincon.jpg"
            alt="hamburger menu"
        />
        <img
            id="meny"
            src="/img/05 Carta A4 2023 Los Clasicos.jpg"
            alt="clasics pizza menu"
        />
        <img
            id="meny"
            src="/img/06 Carta A4 2023 345 Pizzas.jpg"
            alt="spesial pizza menu"
        />
        <img
            id="meny"
            src="/img/07 Carta A4 2023 345 Pizzas 2.jpg"
            alt="spesial pizza menu"
        />
        <img
            id="meny"
            src="/img/08 Carta A4 2023 345 Postres.jpg"
            alt="dessert menu"
        />
        <img
            id="meny"
            src="/img/09 Carta A4 2023 345 Helados.jpg"
            alt="ice cream menu"
        />
        <img
            id="meny"
            src="/img/10 Carta A4 2023 345 Menu Infantil.jpg"
            alt="childrens menu"
        />
    </div>
</Layout>

<style>
    html {
        background-color: white;
    }
    div {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    #meny {
        width: 95vw;
        padding: 0;
        margin: 0;
    }
    @media only screen and (min-width: 1000px) {
        #meny {
            width: 70vw;
        }
    }
</style>
